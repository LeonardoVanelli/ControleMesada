@model ProjetoModeloDDD.MVC.ViewModels.TarefaViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-row col-12">
        <div class="form-group col-12">
            <div class="col-md-offset-2">
                <input type="submit" value="Salvar" class="ui violet button" />
                <input id="SaveAndNew" type="submit" value="Salvar/Novo" class="ui blue button" />
                <a href="@Url.Action("Index")" class="ui grey button">Cancelar</a>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h4 class="ui dividing header" style="width: 100%">Dados</h4>
        @Html.HiddenFor(model => model.Id)

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
            <label style="color:red;" title="Campo obrigatório">*</label>
            <div class="ui-widget">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
            <label style="color:red;" title="Campo obrigatório">*</label>
            <div class="ui-widget">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "control-label" })
            <label style="color:red;" title="Campo obrigatório">*</label>
            <div class="ui-widget">
                <div class="ui checkbox">
                    @Html.EditorFor(model => model.Ativo, new { @type = "checkbox" })
                    @Html.LabelFor(model => model.Ativo, null, htmlAttributes: new { @class = "control-label" })
                    @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group col-12">
            <div class="col-md-offset-2">
                <input type="submit" value="Salvar" class="ui violet button" />
            </div>
        </div>
    </div>
}